{
  "dashboard": {
    "title": "AutoDevOps AI Platform",
    "uid": "autodevops-ai",
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "{{status}}"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.05], "type": "gt"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "High Error Rate"
        }
      },
      {
        "title": "Response Latency (P99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99"
          }
        ]
      },
      {
        "title": "Active Workers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "worker_active_count",
            "legendFormat": "Workers"
          }
        ]
      },
      {
        "title": "Queue Depth",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "worker_queue_depth",
            "legendFormat": "{{queue}}"
          }
        ]
      },
      {
        "title": "Circuit Breaker State",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "circuit_breaker_state",
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "mappings": [
            {"type": "value", "options": {"0": {"text": "CLOSED", "color": "green"}}},
            {"type": "value", "options": {"1": {"text": "OPEN", "color": "red"}}},
            {"type": "value", "options": {"2": {"text": "HALF_OPEN", "color": "yellow"}}}
          ]
        }
      },
      {
        "title": "AI Token Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(ai_tokens_used_total[1h])",
            "legendFormat": "{{model}}"
          }
        ]
      },
      {
        "title": "AI Cost (Daily)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "sum(increase(ai_cost_dollars_total[24h]))",
            "legendFormat": "USD"
          }
        ]
      },
      {
        "title": "Rate Limit Hits",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "rate(rate_limit_hits_total[5m])",
            "legendFormat": "{{endpoint}}"
          }
        ]
      }
    ],
    "datasources": {
      "prometheus": {
        "type": "prometheus",
        "url": "${PROMETHEUS_URL}"
      }
    }
  },
  "overwrite": true
}